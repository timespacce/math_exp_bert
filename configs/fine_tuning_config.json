    "fine_tuning":     "GENERATIVE",
    "reload":          true,
    "freeze":          false,
    "freeze_interval": -6
  },
  "execution": {
    "gpu_mode": "-1",
    "train":    true,
    "infer":    true,
    "eager":    true,
    "debug":    true
  }
