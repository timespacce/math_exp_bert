{
  "data":      {
    "checkpoint_factor":     20,
    "checkpoint_folder":     "checkpoints/l4_h128_io",
    "vocab_folder":          "vocabs/sub_vocab_bert_file.txt",
    "train_data_dir":        "data/derivation/generative/train/",
    "test_data_dir":         "data/derivation/generative/test/",
    "train_validation_file": "validation/derivation/generative/train_validation.txt",
    "test_validation_file":  "validation/derivation/generative/test_validation.txt",
    "cpu_threads":           8
  },
  "model":     {
    "vocab_size":        512,
